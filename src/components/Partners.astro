---
import Img1 from "../assets/img1.png";
import Img2 from "../assets/img2.png";
import Img3 from "../assets/img3.png";
import { Image } from "astro:assets";
import { FiArrowUpRight } from "react-icons/fi";
---

<div class="text-white pb-28">
  <div class="flex justify-center items-center flex-col">
    <i class="h-1 block mb-3 md:mb-4 w-40 bg-blue-500"></i>
    <h1 class="flex flex-col items-center leading-16 md:leading-20 mt-5">
      <span class="md:text-7xl font-medium md:leading-24 leading-14 text-4xl">
        Our Partners</span
      >
      <span class="text-xl md:w-3/5 text-center mt-5 md:mt-7 font-light"
        >Lorem ipsum dolor sit amet consectetur adipiscing elit dolor ipsum
        scelerisque quis tellus suscipit sit consectetur imperdiet facilisis.</span
      >
    </h1>
  </div>
  <div class="grid lg:grid-cols-3 grid-cols-1 gap-x-10 mt-20">
    <div class="">
      <Image
        class="w-full hover:scale-[101%] transition-all duration-200 ease-in-out"
        src={Img1}
        alt="partners"
      />
      <h1 class="mt-7 flex justify-between items-center">
        <span class="md:text-[40px] text-3xl">John Carter</span>
        <span class="text-3xl"><FiArrowUpRight /></span>
      </h1>
      <h2 class="uppercase text-xl text-neutral-500 mt-2 md:mt-1">
        CEO & CO-FOUNDER
      </h2>
    </div>
    <div class="my-10 md:my-0">
      <Image
        class="w-full hover:scale-[101%] transition-all duration-200 ease-in-out"
        src={Img2}
        alt="partners"
      />
      <h1 class="mt-7 flex justify-between items-center">
        <span class="md:text-[40px] text-3xl">Lilly Woods</span>
        <span class="text-3xl"><FiArrowUpRight /></span>
      </h1>
      <h2 class="uppercase text-xl text-neutral-500 mt-2 md:mt-1">
        Managing Partners
      </h2>
    </div>
    <div>
      <Image
        class="w-full hover:scale-[101%] transition-all duration-200 ease-in-out"
        src={Img3}
        alt="partners"
      />
      <h1 class="mt-7 flex justify-between items-center">
        <span class="md:text-[40px] text-3xl">Sophie Moore</span>
        <span class="text-3xl"><FiArrowUpRight /></span>
      </h1>
      <h2 class="uppercase text-xl text-neutral-500 mt-2 md:mt-1">
        Senior Partner
      </h2>
    </div>
  </div>
  <button
    class="text-2xl w-fit mx-auto mt-12 flex items-center border-b-2 hover:border-b-0 transition-all duration-75 ease-linear leading-14"
  >
    <span class="font-medium">Meet all partners</span>
    <span class="text-3xl"> <FiArrowUpRight /> </span>
  </button>
</div>
